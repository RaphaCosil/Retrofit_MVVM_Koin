<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/principal_color1</item>
        <item name="colorPrimaryDark">@color/principal_color1</item>
        <item name="colorAccent">@color/principal_color1</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="background">@drawable/style_edit_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <style name="CustomDialogButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="CardWithBorder" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="android:background">@drawable/style_item_recycle</item>
    </style>
</resources>
